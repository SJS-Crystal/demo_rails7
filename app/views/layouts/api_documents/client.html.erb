<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>API Reference</title>
    <%= javascript_include_tag 'api_doc/jquery/2.1.3/jquery.min.js' %>
    <%= javascript_include_tag 'api_doc/js/lib/imagesloaded.min.js' %>
    <%= javascript_include_tag 'api_doc/js/lib/jquery_ui.js' %>
    <%= javascript_include_tag 'api_doc/js/lib/jquery.highlight.js' %>
    <%= javascript_include_tag 'api_doc/js/lib/jquery.tocify.js' %>
    <%= javascript_include_tag 'api_doc/js/lib/lunr.js' %>
    <%= javascript_include_tag 'api_doc/js/script.js' %>
    <%= stylesheet_link_tag 'api_doc/css/style.css' %>
    <%= stylesheet_link_tag 'api_doc/bootstrap/css/bootstrap.min.css' %>
  </head>
  <body class="">
    <div class="tocify-wrapper">
      <div class="search">
        <input type="text" class="search" id="input-search" placeholder="Search">
      </div>
      <ul class="search-results"></ul>
      <div id="toc">
      </div>
    </div>
    <div class="page-wrapper">
      <div class="content">
        <% i = 0 %>
        <% process_split_api($client_desc, 3).each do |key, arr_api_doc| %>
          <h1 id="<%= key.to_s %>"><a href="#<%= key.to_s %>" class="headerlink" title="<%= key.to_s.capitalize %>"></a>
            <%= key.capitalize %></h1>
          <table>
            <tbody>
              <tr>
                <th></th>
                <th>Method</th>
                <th>API</th>
                <th>Params</th>
                <th>Notes</th>
              </tr>
              <% arr_api_doc.each do |item| %>
                <tr>
                  <td>
                    <%= i = i+1 %>
                  </td>
                  <td>
                    <span class="badge badge-<%= action_label_api(item.method) %>"><%= item.method.upcase %></span>
                  </td>
                  <td>
                    <a href="<%= root_url + item.api.to_s %>"><%= item.api %></a>
                  </td>
                  <td>
                    <%= item.params %>
                  </td>
                  <td>
                    <%= item.notes %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </body>
</html>
