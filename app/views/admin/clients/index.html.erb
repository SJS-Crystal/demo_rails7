<section class="content" data-controller="admin--client">
  <div class="container-fluid">
    <%= render "shared/notice" %>

    <div class="row">
      <div class="col-md-12">
        <div class="float-right">
          <%= link_to new_admin_client_path, class: 'btn btn-info' do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body p-0">
            <table class="table">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Name</th>
                  <th>Payout Rate</th>
                  <th>Balance</th>
                  <th style="width: 125px"></th>
                </tr>
              </thead>
              <tbody>
                <% @clients.each do |client| %>
                  <tr>
                    <td><%= link_to client.username, [:admin, client] %></td>
                    <td><%= client.name %></td>
                    <td><%= client.payout_rate %></td>
                    <td><%= client.balance %></td>
                    <td>
                      <%= link_to edit_admin_client_url(client), class: 'btn btn-primary' do %>
                        <i class="far fa-edit"></i>
                      <% end %>
                      <%= link_to [:admin, client], data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <% if @pagy.pages > 1 %>
            <div class="card-footer clearfix">
              <ul class="pagination pagination-sm m-0">
                <%== pagy_bootstrap_nav(@pagy) %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
