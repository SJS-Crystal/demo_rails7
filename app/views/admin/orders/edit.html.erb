<section class="content" data-controller="admin--order">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="float-right">
          <%= link_to admin_orders_path, class: 'btn btn-info' do %>
            <i class="fas fa-list"></i>
          <% end %>
          <%= link_to admin_order_path(@order), class: 'btn btn-primary' do %>
            <i class="far fa-eye"></i>
          <% end %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="card card-primary">
          <%= render "form", order: @order, url: admin_order_path(@order) %>
        </div>
      </div>
    </div>
  </div>
</section>
