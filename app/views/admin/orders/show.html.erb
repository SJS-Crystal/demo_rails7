<section class="content" data-controller="admin--order">
  <div class="container-fluid">
    <%= render "shared/notice" %>

    <div class="row">
      <div class="col-md-12">
        <div class="float-right">
          <%= link_to admin_orders_path, class: 'btn btn-info' do %>
            <i class="fas fa-list"></i>
          <% end %>
          <%= link_to edit_admin_order_path(@order), class: 'btn btn-warning' do %>
            <i class="far fa-edit"></i>
          <% end %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="card card-primary">
          <%= render "order_detail", order: @order %>
        </div>
      </div>
    </div>
  </div>
</section>
