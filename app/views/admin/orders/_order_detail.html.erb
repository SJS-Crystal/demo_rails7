<div class="card-body">
  <div class="col-12">
    <div class="invoice p-3 mb-3">
      <div class="row">
        <div class="col-12">
          <h4>
            <small class="float-right">Date: <%= order.created_at.to_date %></small>
          </h4>
        </div>
      </div>

      <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
          <strong>Product</strong>
          <address>
            Name: <%= order.product.name %><br>
            Brand name: <%= order.product.brand.name %><br>
            Price: <%= "#{order.product.price} #{order.product.currency}" %><br>
            Stock: <%= order.product.stock %>
          </address>
        </div>
        <div class="col-sm-4 invoice-col">
          <strong>Client</strong>
          <address>
            Name: <%= order.client.name %><br>
            Payout rate: <%= order.client.payout_rate %><br>
          </address>
        </div>
        <div class="col-sm-4 invoice-col">
          <b>Order ID:</b> <%= order.id %><br>
          <b>Created at:</b> <%= order.created_at.to_date %><br>
          <b>Status</b> <%= order_status(order) %><br>
          <b>Price:</b> <%= "#{order.price} #{order.currency}" %>
        </div>
      </div>
    </div>
  </div>
</div>
