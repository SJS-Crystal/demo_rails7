<section class="content" data-controller="admin--brand">
  <div class="container-fluid">
    <%= render "shared/notice" %>

    <div class="row">
      <div class="col-md-12">
        <div class="float-right">
          <%= link_to new_admin_brand_path, class: 'btn btn-info' do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body p-0">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Custome fields</th>
                  <th style="width: 125px"></th>
                </tr>
              </thead>
              <tbody>
                <% @brands.each do |brand| %>
                  <tr>
                    <td><%= link_to brand.name, [:admin, brand] %></td>
                    <td></td>
                    <td>
                      <%= link_to edit_admin_brand_url(brand), class: 'btn btn-primary' do %>
                        <i class="far fa-edit"></i>
                      <% end %>
                      <%= link_to [:admin, brand], data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
              <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
