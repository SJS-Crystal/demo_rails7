<%= form_with(model: [:admin, brand]) do |form| %>
  <%= render  "shared/validation_error", object: brand %>

  <div class="card-body">
    <div class="form-group">
      <%= form.label :name, 'Brand name' %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <h3>Custom fields</h3>

    <%= form.fields_for :custom_fields do |cf| %>
      <div class="form-group">
        <div class="row", data-controller="admin--brand" >
          <%= cf.hidden_field :_destroy, data: { "admin--brand-target": "destroy" } %>
          <div class="col-6">
            <%= cf.label :name, 'Field name' %>
            <%= cf.text_field :name, class: "form-control", data: { action: "input->admin--brand#setDestroy", "admin--brand-target": "name" } %>
          </div>
          <div class="col-6">
            <%= cf.label :value,'Field value' %>
            <%= cf.text_field :value, class: "form-control", data: { action: "input->admin--brand#setDestroy", "admin--brand-target": "value" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="card-footer">
    <%= form.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
