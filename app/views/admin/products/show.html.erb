<section class="content" data-controller="admin--product">
  <div class="container-fluid">
    <%= render "shared/notice" %>

    <div class="row">
      <div class="col-md-12">
        <div class="float-right">
          <%= link_to admin_products_path, class: 'btn btn-info' do %>
            <i class="fas fa-list"></i>
          <% end %>
          <%= link_to edit_admin_product_path(@product), class: 'btn btn-primary' do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to [:admin, @product], data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-body">
            <strong>Name</strong>
            <p class="text-muted">
              <%= @product.name %>
            </p>
            <strong>Status</strong>
            <p class="text-muted">
              <%= @product.status %>
            </p>
            <% @product.custom_fields.each do |cf| %>
              <strong><%= cf.name %></strong>
              <p class="text-muted">
                <%= cf.value %>
              </p>
            <% end %>
            <hr>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
